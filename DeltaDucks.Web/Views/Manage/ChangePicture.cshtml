@model  DeltaDucks.Web.ViewModels.ChangePictureViewModel
@{
    ViewBag.Title = "ChangePicture";
}

<h2>Change Profile Picture</h2>

@using (Html.BeginForm("ChangePicture", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.UserPhoto, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change profile picture" class="btn btn-default"/>
        </div>
    </div>
