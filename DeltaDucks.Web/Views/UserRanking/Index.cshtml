@model IEnumerable<DeltaDucks.Web.ViewModels.UserRankingViewModel>
@{
    ViewBag.Title = "Index";
}
<div class="page-header">
    <h2>Класация на потребителите</h2>
</div>


<div class="row">
    @{
        var cnt = 1;
        foreach (var item in Model)
        {
            <div class="col-md-6" style="margin-top: 20px;">
                <div class="app-card">
                    <div class="app-card-content">
                        <span class="cnt">@cnt</span>
                        <span class="app-card-title">@item.Username - </span>
                        <span class="app-card-title">@item.FirstName @item.LastName</span>
                    </div>
                    <div class="app-card-action">
                        <a>Точки: @item.Score</a>
                        <a class="pull-right">Посетени забележителности: @item.VistedLandmarks</a>
                    </div>
                </div>
            </div>
            cnt++;
        }
    }
</div>
